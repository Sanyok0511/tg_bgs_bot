    <changeSet id="add_faction_id_to_tg_message" author="Alexander">
        <addColumn tableName="tg_message">
            <column name="faction_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="add_tg_message_columns" author="Alexander">
        <addColumn tableName="tg_message">
            <column name="type_message" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="initial_fk_influence_faction" author="Alexander (generated)">
        <addForeignKeyConstraint baseColumnNames="faction_id" baseTableName="tg_message"
                                 constraintName="fk_tg_messages_faction" deferrable="false" initiallyDeferred="false"
                                 onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id"
                                 referencedTableName="faction" validate="true"/>
    </changeSet>
</databaseChangeLog>
